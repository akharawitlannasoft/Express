extends layout

block content

	.container
		h1= title

		form(method="post" action="/users/login")
			.form-group
				label Email address
				input.form-control(type="email" name="username" placeholder="Enter email")
			.form-group
				label Password
				input.form-control(type="password" name="password" placeholder="Enter password")
			button.btn.btn-primary(type="submit") Login